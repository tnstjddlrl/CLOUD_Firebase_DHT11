      <script>
  var firebaseConfig = {
    apiKey: "AIzaSyA0BRNI2zjRh7aNMpk4EwhmvpQa_wo_RVc",
    authDomain: "finaltest-88857.firebaseapp.com",
    databaseURL: "https://finaltest-88857.firebaseio.com",
    projectId: "finaltest-88857",
    storageBucket: "finaltest-88857.appspot.com",
    messagingSenderId: "84589936658",
    appId: "1:84589936658:web:d765852537c857966318cb",
    measurementId: "G-LDK79VN499"
  };
        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);

        
        var myTimer;

        firebase.database().ref().child('logDHT/').on("child_added", function(snapshot) {
          clearTimeout(myTimer);
          
          console.log(snapshot.val());
          var newHumi = snapshot.val().humidity;
          var newTemp = snapshot.val().temperature;
          var newTime = snapshot.val().time;
          humi.innerText = "Humidity : " + newHumi + "%";
          temp.innerText = "Temperature : " + newTemp + "℃";
          time.innerText = "Time : " + newTime;
          now.innerText = "현재 상태 : ON";
            
          myTimer = setTimeout(function() {//시간 측정함수
            now.innerText = "현재 상태 : OFF";
            }, 5000);
          
        
        })

                
// CnavasJS.Chart 객체 생성 및 사용
        var chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                theme: "light1",
                title: {
                text: "실시간 온습도센서 - 차트",
                fontColor: '#03254E',
            },
            legend: {
        		    fontSize: 15
          	},
            axisX: {
                title: "Time",
                titleFontSize: 14,
                titleFontColor: '#03254E',
                valueFormatString: 'HH:mm:ss',
                labelFontColor: '#03254E',
            },
            axisY: {
                valueFormatString: "0.0#",
                minimum: 0,
                maximum: 100,
                title: "온도(°C) 습도(%)",
                titleFontColor: '#03254E',
                titleFontSize: 14,
                labelFontColor: '#03254E',
            },
            toolTip: {
                shared: true,
                contentFormatter: function(e) {
                    var content = CanvasJS.formatDate(e.entries[0].dataPoint.x, "HH:mm:ss") + "<br>";
                    content += "<strong>온도</strong>: " + e.entries[0].dataPoint.y + " &deg;C<br>";
                    content += "<strong>습도</strong>: " + e.entries[1].dataPoint.y + " %";
                    return content;
                }
            },
            animationEnabled: true,
            data: [{
                type: "spline", //change it to line, area, column, pie,
                legendText: "온도",
                showInLegend: true,
                markerColor: "#4682B4",
                markerSize: 1,
                // type: "splineArea",
			          // color: "rgba(83, 223, 128, .6)",
                dataPoints: []
            }, {
                type: "spline", //change it to line, area, column, pie, etc
                legendText: "습도",
                showInLegend: true,
                markerSize: 1,
                dataPoints: []
            }]

        });

        // get the text value from the database
        var dbRef = firebase.database().ref('logDHT/');

        dbRef.on('child_added', function(snapshot) {
            var row = snapshot.val();
            row.time = new Date(row.time);
            chart.options.data[0].dataPoints.push({
                x: row.time,
                y: row.temperature
            });
            chart.options.data[1].dataPoints.push({
                x: row.time,
                y: row.humidity
            });
            chart.render();
        });

</script>
